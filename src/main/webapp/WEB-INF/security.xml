	<beans:bean id = "customSuccessHandler" class = "com.truongvantam.security.CustomSuccessHandler"></beans:bean>
	<beans:bean id = "myUserDetailsService" class = "com.truongvantam.service.UserDetailsServiceImp"></beans:bean> -->
	
</beans:beans>